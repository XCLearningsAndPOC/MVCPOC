@model IEnumerable<MyShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

@foreach(var items in Model)
{
<div class="col-md-4" style="height:450px; padding:10px; margin:10px; border:solid thin whitesmoke">
    <div class="col-md-12">
        <img class="img" style="height:250px" src="~/Content/ProductImages/@items.Image" />
    </div>
    <div class="col-md-12">
        <strong>@Html.ActionLink(items.Name, "Details", new { id = items.Id })</strong>
    </div>
    <div class="col-md-12">
        <p>@items.Description</p>
    </div>
    <div class="col-md-12">
        <h4>@items.Price</h4>
    </div>
    <div class="col-md-12">
        <a href="#" class="btn btn-default">Add To Basket</a>
    </div>
</div>
}
<div class="col-md-12 clearfix">
</div>